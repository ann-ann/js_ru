<%= render 'shared/flash', flash: flash %>
<%= render 'shared/errors', object: @question %>

<%= render 'aside' %>

<%= form_for @question  do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text, rows: 6, class: 'span8', maxlength: 400 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
